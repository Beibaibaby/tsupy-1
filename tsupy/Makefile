# Makefile for python interface for package tsubasa.
# File is generated by gopy. Do not edit.
# gopy gen -output=tsupy -vm=python3 github.com/js061/tsubasa

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/usr/local/bin/python3
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -I/usr/local/opt/python@3.9/Frameworks/Python.framework/Versions/3.9/include/python3.9
LDFLAGS = -L/usr/local/opt/python@3.9/Frameworks/Python.framework/Versions/3.9/lib -lpython3.9 -ldl   -framework CoreFoundation 

all: gen build

gen:
	gopy gen -no-make -vm=python3 github.com/js061/tsubasa

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm tsubasa.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w tsubasa.go
	# generate tsubasa_go$(LIBEXT) from tsubasa.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o tsubasa_go$(LIBEXT) tsubasa.go
	# use pybindgen to build the tsubasa.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _tsubasa$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated tsubasa.py python wrapper imports this c-code package
	
	$(GCC) tsubasa.c -dynamiclib tsubasa_go$(LIBEXT) -o _tsubasa$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


